{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "npm",
			"script": "watch",
			"group": "build",
			"problemMatcher": [],
			"label": "npm: watch",
			"detail": "turbo run build-watch",
			"runOptions": {
				"runOn": "folderOpen"
			}
		},
		{
			"type": "shell",
			"label": "npm: dev",
			"command": "yarn",
			"args": [
				"workspace",
				"@dvirtz/${input:workspace}",
				"dev"
			],
			"isBackground": true,
			"problemMatcher": [
				{
					"pattern": [
						{
							"regexp": ".",
							"file": 1,
							"location": 2,
							"message": 3
						}
					],
					"background": {
						"activeOnStart": true,
						"beginsPattern": "press h + enter to show help",
						"endsPattern": "."
					}
				}
			]
		},
		{
			"label": "configure active workspace",
			"type": "shell",
			"command": "echo ${input:configure-workspace}",
			"problemMatcher": []
		},
		{
			"label": "configure debug url",
			"type": "shell",
			"command": "echo ${input:configure-debug-url}",
			"problemMatcher": []
		},
		{
			"type": "npm",
			"script": "lint",
			"problemMatcher": [],
			"label": "npm: lint",
			"detail": "turbo run lint lint:root"
		},
		{
			"type": "npm",
			"script": "check-types",
			"problemMatcher": [
				"$tsc"
			],
			"label": "npm: check-types",
			"detail": "turbo run check-types"
		}
	],
	"inputs": [
		{
			"id": "configure-workspace",
			"type": "command",
			"command": "shellCommand.execute",
			"args": {
				"command": "node -p \"require('child_process').execSync('yarn workspaces list --json').toString().trim().split('\\n').map(JSON.parse).map(o=>o.location||'').filter(l=>l.startsWith('scripts/')).map(l=>l.split('/').filter(Boolean).pop()).filter(n=>n!=='_template').sort().join('\\n')\"",
				"rememberPrevious": true,
				"taskId": "workspace",
				"useSingleResult": true,
			},
		},
		{
			"id": "workspace",
			"type": "command",
			"command": "shellCommand.execute",
			"args": {
				"command": "echo ${taskId:workspace}",
				"useSingleResult": true,
			}
		},
		{
			"id": "configure-debug-url",
			"type": "command",
			"command": "shellCommand.execute",
			"args": {
				"command": "echo ${prompt:prompt=Enter Debug URL}",
				"useSingleResult": true,
				"taskId": "debug-url",
				"rememberPrevious": true,
			}
		}
	]
}
