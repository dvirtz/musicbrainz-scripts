{
  "name": "@dvirtz/musicbrainz-scripts",
  "version": "0.0.0",
  "description": "Collection of userscripts for MusicBrainz",
  "author": {
    "name": "Dvir Yitzchaki",
    "email": "dvirtz@gmail.com"
  },
  "license": "BSL-1.0",
  "private": true,
  "engines": {
    "node": ">=18"
  },
  "keywords": [
    "musicbrainz",
    "userscripts"
  ],
  "workspaces": [
    "scripts/*",
    "lib/*"
  ],
  "scripts": {
    "foreach-script": "yarn workspaces foreach --from 'scripts/*' --interlaced",
    "prepare": "husky",
    "lint": "yarn knip && yarn spell",
    "build": "yarn run foreach-script --recursive --topological-dev run build",
    "ci": "yarn lint && yarn build",
    "semantic-release": "yarn foreach-script --worktree exec semantic-release",
    "knip": "knip --tags=-knipignore",
    "spell": "cspell",
    "test": "yarn foreach-script --worktree --from 'scripts/*' exec playwright test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dvirtz/musicbrainz-scripts.git"
  },
  "devDependencies": {
    "@babel/core": "^7.25.2",
    "@babel/preset-env": "^7.26.9",
    "@babel/preset-typescript": "^7.27.0",
    "@commitlint/cli": "^19.4.1",
    "@commitlint/config-conventional": "^19.4.1",
    "@dvirtz/acum-work-import": "workspace:^",
    "@dvirtz/setlistfm-musicbrainz-import": "workspace:^",
    "@eslint/js": "^9.14.0",
    "@gera2ld/plaid": "~2.7.0",
    "@gera2ld/plaid-rollup": "~2.7.0",
    "@playwright/test": "^1.51.1",
    "@rollup/plugin-eslint": "^9.0.5",
    "@rollup/plugin-node-resolve": "^16.0.0",
    "@rollup/plugin-typescript": "^12.1.2",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^11.0.0",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^9.0.0",
    "@semantic-release/release-notes-generator": "^12.0.0",
    "@types/babel__core": "^7",
    "@types/babel__preset-env": "^7",
    "@types/greasemonkey": "^4.0.7",
    "@types/node": "^22.9.0",
    "@violentmonkey/dom": "^2.2.1",
    "babel-plugin-dedent": "^2.1.0",
    "babel-preset-solid": "^1.8.22",
    "cross-env": "^7.0.3",
    "cspell": "^8.14.2",
    "del-cli": "^5.1.0",
    "dotenv": "^16.4.7",
    "eslint": "^9.9.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "globals": "^15.12.0",
    "husky": "^9.0.11",
    "knip": "^5.36.3",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "rollup": "^4.21.2",
    "rollup-plugin-dts": "^6.1.1",
    "rollup-plugin-import-css": "^3.5.8",
    "rollup-plugin-userscript": "^0.3.2",
    "semantic-release": "^22.0.0",
    "semantic-release-mirror-version": "^1.1.2",
    "semantic-release-monorepo": "^8.0.2",
    "solid-js": "^1.9.4",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.11.0",
    "weight-balanced-tree": "^0.6.1"
  },
  "lint-staged": {
    "src/**": [
      "eslint --fix",
      "prettier --write --ignore-unknown"
    ]
  },
  "prettier": {
    "printWidth": 120,
    "singleQuote": true,
    "tabWidth": 2,
    "useTabs": false,
    "semi": true,
    "quoteProps": "preserve",
    "trailingComma": "es5",
    "bracketSpacing": false,
    "arrowParens": "avoid",
    "endOfLine": "auto"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "body-max-line-length": [
        2,
        "always",
        200
      ],
      "footer-max-line-length": [
        0,
        "always"
      ]
    }
  },
  "resolutions": {
    "@rollup/plugin-eslint/eslint": "^9.9.1"
  },
  "packageManager": "yarn@4.3.1"
}
