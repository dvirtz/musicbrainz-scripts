{
  "name": "@dvirtz/musicbrainz-scripts",
  "description": "Collection of userscripts for MusicBrainz",
  "author": {
    "name": "Dvir Yitzchaki",
    "email": "dvirtz@gmail.com"
  },
  "homepage": "https://github.com/dvirtz/musicbrainz-scripts",
  "bugs": {
    "url": "https://github.com/dvirtz/musicbrainz-scripts/issues"
  },
  "license": "BSL-1.0",
  "private": true,
  "engines": {
    "node": ">=18"
  },
  "keywords": [
    "musicbrainz",
    "userscripts"
  ],
  "workspaces": [
    "scripts/*",
    "lib/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "watch": "yarn turbo watch check-types lint --experimental-write-cache",
    "release": "yarn workspaces foreach --all --topological-dev --exclude 'lib/*' run release",
    "test": "turbo run test",
    "ci": "yarn check-types && yarn lint && yarn build",
    "lint:knip": "knip --tags=-knipignore",
    "lint:markdown": "markdownlint-cli2",
    "lint:spell": "cspell",
    "lint:root": "yarn lint:knip && yarn lint:spell && yarn lint:markdown",
    "lint": "turbo run lint lint:root",
    "check-types": "turbo run check-types",
    "prepare": "husky"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dvirtz/musicbrainz-scripts.git"
  },
  "devDependencies": {
    "@babel/core": "^7.25.2",
    "@babel/preset-env": "^7.26.9",
    "@babel/preset-typescript": "^7.27.0",
    "@commitlint/cli": "^19.4.1",
    "@commitlint/config-conventional": "^19.4.1",
    "@dvirtz/acum-work-import": "workspace:^",
    "@dvirtz/setlistfm-musicbrainz-import": "workspace:^",
    "@eslint/js": "^9.14.0",
    "@playwright/test": "^1.51.1",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^11.0.0",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^9.0.0",
    "@semantic-release/release-notes-generator": "^12.0.0",
    "@types/babel__core": "^7",
    "@types/babel__preset-env": "^7",
    "@types/node": "^22.9.0",
    "@types/tampermonkey": "^5.0.4",
    "babel-preset-solid": "^1.8.22",
    "cross-env": "^7.0.3",
    "cspell": "^8.14.2",
    "del-cli": "^5.1.0",
    "dotenv": "^16.4.7",
    "eslint": "^9.9.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "globals": "^15.12.0",
    "husky": "^9.0.11",
    "knip": "^5.36.3",
    "lint-staged": "^15.2.2",
    "markdownlint": "^0.37.4",
    "markdownlint-cli2": "^0.17.2",
    "markdownlint-rule-relative-links": "^4.0.1",
    "prettier": "^3.2.5",
    "semantic-release": "^22.0.0",
    "semantic-release-mirror-version": "^1.1.2",
    "semantic-release-monorepo": "^8.0.2",
    "solid-js": "^1.9.4",
    "turbo": "^2.5.4",
    "typedbrainz": "^0.1.3",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.11.0",
    "typescript-plugin-css-modules": "^5.1.0",
    "vite": "^6.2.6",
    "vite-plugin-checker": "^0.9.1",
    "vite-plugin-dts": "^4.5.3",
    "vite-plugin-monkey": "^5.0.8",
    "vite-plugin-solid": "^2.11.6"
  },
  "lint-staged": {
    "src/**": [
      "eslint --fix",
      "prettier --write --ignore-unknown"
    ]
  },
  "prettier": {
    "printWidth": 120,
    "singleQuote": true,
    "tabWidth": 2,
    "useTabs": false,
    "semi": true,
    "quoteProps": "preserve",
    "trailingComma": "es5",
    "bracketSpacing": false,
    "arrowParens": "avoid",
    "endOfLine": "auto"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "body-max-line-length": [
        2,
        "always",
        200
      ],
      "footer-max-line-length": [
        0,
        "always"
      ]
    }
  },
  "packageManager": "yarn@4.3.1"
}
