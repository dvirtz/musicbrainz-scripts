{
  "compilerOptions": {
    "outDir": "scripts",
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "allowSyntheticDefaultImports": true,
    // https://github.com/kobaltedev/kobalte/issues/535
    "skipLibCheck": true,
    "lib": [
      "DOM",
      "ES6",
      "DOM.Iterable",
      "ScriptHost",
      "ESNext"
    ],
    "strict": true,
    "noImplicitAny": true,
    "jsx": "preserve",
    "jsxImportSource": "solid-js",
    "paths": {
      "src/*": [
        "./src/*"
      ]
    },
    "resolveJsonModule": true,
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "src/*/dist/*"
  ]
}
